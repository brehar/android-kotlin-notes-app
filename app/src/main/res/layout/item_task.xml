<?xml version="1.0" encoding="utf-8"?>
<me.bretthartman.notes.views.TaskView xmlns:android="http://schemas.android.com/apk/res/android"
                                      xmlns:app="http://schemas.android.com/apk/res-auto"
                                      android:layout_height="wrap_content"
                                      android:layout_width="match_parent">

    <TextView
            android:id="@+id/titleView"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/item_margin_default"
            android:layout_marginTop="@dimen/item_margin_default"
            android:layout_width="wrap_content"
            android:text=""
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>
    <LinearLayout
            android:id="@+id/todoContainer"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/titleView"
            android:layout_height="wrap_content"
            android:layout_width="0dp"
            android:orientation="vertical">
    </LinearLayout>
</me.bretthartman.notes.views.TaskView>
